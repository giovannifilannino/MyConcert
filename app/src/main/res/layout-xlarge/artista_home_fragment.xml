<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/benvenuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/pross"
        android:layout_width="match_parent"
        android:layout_below="@id/benvenuto"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
>

        <TextView
            android:id="@+id/txtConc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:text="@string/luogoConc"

            />
        <TextView
            android:id="@+id/txtConc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@id/txtConc4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:text=" "

            />


        <TextView
            android:id="@+id/txtConc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtConc"
            android:layout_centerHorizontal="true"
            android:text="@string/scopri"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>



    <TextView
        android:id="@+id/scritta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/topfive"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <android.support.v7.widget.RecyclerView

        android:id="@+id/listTopFiveSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="190dp">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/findImg"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/find"
        android:layout_below="@+id/pross"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
