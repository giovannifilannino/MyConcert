<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="@color/indigowhite"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:ems="10"
        android:elevation="0.4dp"
        android:paddingLeft="10dp"
        android:id="@+id/username"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:background="@color/indigowhite"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp" />

    <EditText
        android:textAlignment="center"
        android:elevation="0.4dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:background="@color/indigowhite"
        android:hint="@string/password"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:elevation="30dp"
        android:layout_below="@id/password"
        android:text="@string/login"
        android:id="@+id/buttonLogin"
        android:background="@drawable/rounded_bttn_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/buttonLogin"
    android:layout_marginTop="35dp"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/condizione"
    android:id="@+id/cond"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cond"
        android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:background="@drawable/rounded_bttn"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/immagine"

        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>