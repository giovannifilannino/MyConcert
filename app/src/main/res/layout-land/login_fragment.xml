<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@drawable/possibilesfondo"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:ems="10"
        android:elevation="0.4dp"
        android:paddingLeft="10dp"
        android:id="@+id/username"
        android:textAlignment="center"

        android:textColorHint="@android:color/white"

        android:textColor="#ffffff"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <EditText
        android:textAlignment="center"
        android:elevation="0.4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"

        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="@string/password"
        android:id="@+id/password"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:text="@string/login"
        android:id="@+id/buttonLogin"
        android:background="@drawable/rounded_bttn_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/buttonLogin"
    android:layout_marginTop="35dp"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/condizione"
    android:id="@+id/cond"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/nondo"

        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

   <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/login_button_tweet"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
       android:layout_below="@+id/buttonLogin"
       android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sei un artista?"
        android:id="@+id/textView3"
        android:textColor="#feffffff"
        android:layout_alignTop="@+id/cond"
        android:layout_toStartOf="@+id/cond" />

    <TextView
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrati"
        android:id="@+id/regartista"
        android:textColor="#ff0000"
        android:textIsSelectable="true"
        android:clickable="true"
        android:layout_alignTop="@+id/cond"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>


